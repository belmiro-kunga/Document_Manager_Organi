# Development Environment Configuration
# Configuração do Ambiente de Desenvolvimento

# Application
NODE_ENV=development
APP_NAME=Advanced DMS
APP_VERSION=1.0.0
APP_PORT=8000
APP_HOST=localhost

# Database Configuration
DATABASE_HOST=localhost
DATABASE_PORT=5433
DATABASE_NAME=adms_dev
DATABASE_USER=adms_user
DATABASE_PASSWORD=adms_dev_password
DATABASE_URL=postgresql://adms_user:adms_dev_password@localhost:5433/adms_dev
DATABASE_SSL=false
DATABASE_LOGGING=true

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis_dev_password
REDIS_URL=redis://:redis_dev_password@localhost:6379
REDIS_DB=0

# Elasticsearch Configuration
ELASTICSEARCH_HOST=localhost
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_INDEX_PREFIX=adms_dev

# MinIO Configuration (S3-compatible)
MINIO_HOST=localhost
MINIO_PORT=9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=adms-dev-documents
MINIO_USE_SSL=false

# Authentication
JWT_SECRET=dev_jwt_secret_key_change_in_production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d
BCRYPT_ROUNDS=10

# File Storage
STORAGE_PROVIDER=local
LOCAL_STORAGE_PATH=./storage
MAX_FILE_SIZE=100MB
ALLOWED_FILE_TYPES=pdf,doc,docx,txt,jpg,jpeg,png,gif,mp4,avi

# Email Configuration (Development)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@adms.dev
SMTP_SECURE=false

# Logging
LOG_LEVEL=debug
LOG_FORMAT=dev
LOG_FILE=./logs/app.log
LOG_MAX_SIZE=10MB
LOG_MAX_FILES=5

# API Configuration
API_PREFIX=/api/v1
API_RATE_LIMIT=1000
API_RATE_WINDOW=15

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:5173
CORS_CREDENTIALS=true

# Session Configuration
SESSION_SECRET=dev_session_secret_change_in_production
SESSION_MAX_AGE=86400000

# Python Analysis Service
PYTHON_SERVICE_URL=http://localhost:8001
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=2000

# Monitoring
HEALTH_CHECK_INTERVAL=30000
METRICS_ENABLED=true
METRICS_PORT=9090

# Development Features
HOT_RELOAD=true
DEBUG_MODE=true
MOCK_EXTERNAL_APIS=true
SEED_DATABASE=true
AUTO_MIGRATIONS=true

# Internationalization
DEFAULT_LANGUAGE=pt-PT
SUPPORTED_LANGUAGES=pt-PT,en-US,fr-FR
TIMEZONE=Africa/Luanda

# Security (Development - Less Strict)
SECURITY_HEADERS=false
RATE_LIMITING=false
CSRF_PROTECTION=false
HELMET_ENABLED=false

# Docker Development
DOCKER_BUILDKIT=1
COMPOSE_DOCKER_CLI_BUILD=1