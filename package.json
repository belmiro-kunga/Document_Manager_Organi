{
  "name": "advanced-document-management-system",
  "version": "1.0.0",
  "description": "Sistema de Gestão Documental Avançado - Multilíngue (PT/EN/FR) com IA",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "clean": "lerna clean",
    "dev": "concurrently \"npm run dev:auth\" \"npm run dev:document\" \"npm run dev:python\" \"npm run dev:web\"",
    "dev:auth": "cd packages/auth-service && npm run start:dev",
    "dev:document": "cd packages/document-service && npm run dev",
    "dev:python": "cd packages/python-analysis && python -m uvicorn src.adms_analysis.main:app --reload --port 8001",
    "dev:web": "cd packages/web-client && npm run dev",
    "build": "lerna run build --stream",
    "build:auth": "cd packages/auth-service && npm run build",
    "build:document": "cd packages/document-service && npm run build",
    "build:web": "cd packages/web-client && npm run build",
    "test": "jest",
    "test:packages": "lerna run test --stream",
    "test:auth": "cd packages/auth-service && npm test",
    "test:document": "cd packages/document-service && npm test",
    "test:web": "cd packages/web-client && npm test",
    "test:coverage": "jest --coverage",
    "lint": "lerna run lint --stream",
    "lint:auth": "cd packages/auth-service && npm run lint",
    "lint:document": "cd packages/document-service && npm run lint",
    "lint:web": "cd packages/web-client && npm run lint",
    "lint:fix": "lerna run lint:fix --stream",
    "format": "prettier --write \"**/*.{js,ts,tsx,json,md,yml,yaml}\"",
    "format:check": "prettier --check \"**/*.{js,ts,tsx,json,md,yml,yaml}\"",
    "version": "lerna version",
    "publish": "lerna publish",
    "docker:dev": "docker compose -f docker-compose.dev.yml up -d",
    "docker:dev:build": "docker compose -f docker-compose.dev.yml up --build -d",
    "docker:dev:logs": "docker compose -f docker-compose.dev.yml logs -f",
    "docker:prod": "docker compose -f docker-compose.prod.yml up --build -d",
    "docker:down": "docker compose -f docker-compose.dev.yml down -v",
    "docker:clean": "docker compose -f docker-compose.dev.yml down -v --remove-orphans && docker system prune -f",
    "docker:setup": "powershell -ExecutionPolicy Bypass -File docker/scripts/dev-setup.ps1",
    "docker:health": "powershell -ExecutionPolicy Bypass -File docker/scripts/health-check.ps1",
    "docker:manager": "node scripts/dev-docker.js",
    "setup:hot-reload": "node scripts/setup-hot-reload.js",
    "husky:fix": "powershell -ExecutionPolicy Bypass -File scripts/fix-husky-windows.ps1",
    "husky:test": "powershell -ExecutionPolicy Bypass -File scripts/test-husky-simple.ps1",
    "lint:manual": "powershell -ExecutionPolicy Bypass -File scripts/manual-lint.ps1",
    "postinstall": "echo 'Run npm run husky:fix to configure Husky for your environment'"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.7",
    "@commitlint/config-conventional": "^17.6.7",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "concurrently": "^8.2.0",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^8.0.3",
    "jest": "^29.6.1",
    "js-yaml": "^4.1.0",
    "lerna": "^8.2.3",
    "lint-staged": "^13.3.0",
    "prettier": "^3.0.0",
    "typescript": "^5.1.6"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "author": "Advanced DMS Team",
  "license": "MIT",
  "keywords": [
    "document-management",
    "dms",
    "ai",
    "multilingual",
    "portuguese",
    "angola",
    "collaboration",
    "enterprise"
  ]
}
