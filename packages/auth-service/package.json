{
  "name": "@adms/auth-service",
  "version": "1.0.0",
  "description": "Authentication Service for Advanced Document Management System",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "start": "node dist/index.js",
    "start:dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "start:prod": "NODE_ENV=production node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --config jest.integration.config.js",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "clean": "rimraf dist",
    "docker:build": "docker build -t adms-auth-service .",
    "docker:run": "docker run -p 3001:3001 adms-auth-service",
    "migrate": "ts-node src/scripts/migrate.ts",
    "seed": "ts-node src/scripts/seed.ts"
  },
  "keywords": [
    "authentication",
    "authorization",
    "jwt",
    "oauth",
    "security",
    "microservice",
    "typescript",
    "nodejs"
  ],
  "author": "ADMS Team",
  "license": "MIT",
  "dependencies": {
    "@adms/shared": "file:../shared",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "express-rate-limit": "^7.1.5",
    "pg": "^8.11.3",
    "ioredis": "^5.3.2",
    "bcrypt": "^5.1.1",
    "jsonwebtoken": "^9.0.2",
    "joi": "^17.11.0",
    "nodemailer": "^6.9.7",
    "speakeasy": "^2.0.0",
    "qrcode": "^1.5.3",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-microsoft": "^1.0.0",
    "express-session": "^1.17.3",
    "connect-redis": "^7.1.0",
    "uuid": "^9.0.1",
    "crypto": "^1.0.1",
    "ua-parser-js": "^1.0.37",
    "geoip-lite": "^1.4.10",
    "express-validator": "^7.0.1",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.32.6",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1"
