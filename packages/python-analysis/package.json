{
  "name": "@adms/python-analysis",
  "version": "1.0.0",
  "description": "Python analysis service for OCR and AI processing in Advanced DMS",
  "main": "src/adms_analysis/main.py",
  "scripts": {
    "dev": "python -m uvicorn src.adms_analysis.main:app --reload --host 0.0.0.0 --port 8001",
    "start": "python -m uvicorn src.adms_analysis.main:app --host 0.0.0.0 --port 8001",
    "test": "python -m pytest tests/ -v",
    "test:coverage": "python -m pytest tests/ --cov=src --cov-report=html --cov-report=term",
    "lint": "python -m flake8 src/ tests/",
    "lint:fix": "python -m black src/ tests/ && python -m isort src/ tests/",
    "type-check": "python -m mypy src/",
    "setup": "pip install -e .",
    "setup:dev": "pip install -e .[dev]"
  },
  "keywords": [
    "python",
    "fastapi",
    "ocr",
    "nlp",
    "ai",
    "tesseract",
    "spacy",
    "document-analysis"
  ],
  "engines": {
    "python": ">=3.9"
  },
  "private": true
}
